<project xmlns:ivy="antlib:org.apache.ivy.ant" name="hello-ivy" default="build">
	<!-- tasks -->
	<taskdef resource="org/apache/ivy/ant/antlib.xml" uri="antlib:org.apache.ivy.ant">
		<classpath>
			<pathelement location="/usr/share/java/ivy.jar" />
		</classpath>
	</taskdef>
	<!-- targets -->
	<target name="retrieve" description="--> retrieve dependencies with ivy">
		<delete dir="lib"/>
		<!--ivy:settings file="ivysettings.xml" /-->
		<ivy:resolve refresh="true" showprogress="true"/>
		<ivy:retrieve sync="true" symlink="true" conf="default"/>
		<!--ivy:retrieve type="jar" /-->
		<!--ivy:retrieve sync="true"/-->
		<!--ivy:retrieve pattern="lib/[artifact].[ext]" type="jar" sync="true"/-->
	</target>
</project>
